{% extends "layout.twig" %}

{% block content %}
  <div class="block-page">
    <div class="container clearfix">
      <h2 class="text-uppercase text-center color-orange">Registro</h2>
      <div class="devider grey-salsa-border">
        <i class="ti-pencil grey-salsa"></i>
      </div>
      <div class="forms">
        <form action="{{ url('valida') }}" method="post" id="frmValida">
          <div class="form-group row">
            <div class="col-md-6 col-sm-12">
              <label>Correo</label>
              <input class="form-control form-flat" name="correo" id="correo" required="" type="email">
            </div>
            <div class="col-md-6 col-sm-12">
              <label>Token</label>
              <input class="form-control form-flat" name="token" id="token" required="" type="text">
            </div>            					
          </div>
          <div class="form-group row">
            <div class="col-md-10 col-sm-12">
              <div class="alert alert-danger hidden" id="msgv">MSG
              </div>
          </div>
          </div>
          <div class="form-group row">
            <div class="col-md-12 col-sm-12">
              <button type="submit" class="btn primary-btn btn-flat-solid pull-right" id="send"><div>Validar</div></button>
            </div>
          </div>                                       				            				            				
        </form>
      </div>
    </div>
  </div>
{% endblock %}